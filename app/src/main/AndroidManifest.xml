<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trymash" >

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <meta-data android:name="DATABASE" android:value="demo.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.trymash" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name=".SplashScreen.FinalSplash"
            android:label="@string/title_activity_final_splash"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SplashScreen.NextSplash"
            android:label="@string/title_activity_next_splash"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activity.FirstActivity"
            android:label="@string/title_activity_first"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activity.SoundSettingsActivity"
            android:label="@string/title_activity_sound_settings"
            android:screenOrientation="portrait">
        </activity>
        <!-- <activity
             android:name=".Activity.HighScoreActivity"
             android:label="@string/title_activity_high_score"
             android:screenOrientation="portrait">
         </activity>-->
        <activity
            android:name=".Activity.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activity.ScoreBoardActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SplashScreen.Splash"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
